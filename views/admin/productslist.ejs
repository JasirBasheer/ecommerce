      <main class="main">
        <div class="container">
          <div class="table-responsive" id="no-more-tables" >
            <table class="table table-striped bg-white" id="myTable">
              <thead class="bg-dark text-light">
                
                <tr>
                  <th style="font-size: 20px; text-align: center;" scope="col" class="sorting">Name</th>
                  <th style="font-size: 20px; text-align: center;" scope="col" class="sorting">Category</th>
                  <th style="font-size: 20px; text-align: center;" scope="col" class="sorting">Description</th>
                  <th style="font-size: 20px; text-align: center;" scope="col" class="sorting">Price</th>
                  <th style="font-size: 20px; text-align: center;" scope="col" class="sorting">No of Stocks</th>
                  <th style="font-size: 20px; text-align: center;" scope="col" >Images</th>
                  <th style="font-size: 20px; text-align: center;" scope="col" >Actions</th>
                </tr>
              </thead>
              <tbody>
        
                <% if (products.length !== 0) { %>
                  <% for (let i = products.length - 1; i >= 0; i--) { %>
                    <tr style="font-size: medium; text-align: center;">
                      <td data-title="Name"><%= products[i].productName %></td>
                      <td data-title="Category"><%= products[i].productCategory %></td>
                      <td data-title="Description"><%= products[i].productDescription %></td>
                      <td data-title="Price"><%= products[i].productPrice %></td>
                      <td data-title="No Of Stocks"><%= products[i].num_of_stocks %></td>
                      <td data-title="Image">
                      
                
                       
                          <% for( let j = 0; j < products[i].images.length; j++ ) { %>

                            <div style="display: flex; align-items: center; "> 
                              <img 
                                src="<%= products[i].images[j] %>" 
                                alt="<%= products[i].images[j] %>"
                                width="40px" height="40px" style="margin-bottom: 10px;">

                                <form action="/admin/deleteProductImage" method="POST">
                                  <input type="hidden" name="productId" value="<%=products[i]._id%>" />
                                  <input type="hidden" name="image" value="<%=products[i].images[j]%>" />
                                  <button type="submit" class="btn-danger ps-2 mx-md-5" 
                                    onclick="return confirm('Are you surely want to delete it?')">
                                    <i class="fa-sharp fa-solid fa-trash"></i>
                                  </button>                                
                                </form>                             
                            </div>  
                          
                          <% } %>
                        
                      </td>
                      <td data-title="Actions">
                        <div style="display: flex; align-items: center;">
                          <a href="/admin/editproduct?id=<%= products[i]._id %>" style="margin-right: 15px; margin-left: 15px; text-decoration: none;">
                            <span><i class="fa-sharp fa-solid fa-file-pen"></i></span>
                          </a>

                          <% if (products[i].is_blocked==false) { %>
                            <button type="button" class="btn"  style="border-radius: 5px; background-color: rgba(47, 255, 0, 0.537);border: none;" disabled>Unblock</button>
                            <button type="button" class="btn"  style="border-radius: 5px; background-color: rgb(255, 0, 0);" onclick="blockproduct('<%= products[i]._id %>')">Block</button>
                           
                          <% } else { %>
                            <button type="button" class="btn"  style="border-radius: 5px; background-color: rgb(47, 255, 0);"  onclick="unBlockproduct('<%= products[i]._id %>')">Unblock</button>
                            <button type="button" class="btn"  style="border-radius: 5px; background-color: rgba(255, 0, 0, 0.367);border: none;" disabled>Block</button>
                            <% } %>
                           
                        
                        </div>
                      </td>
                    </tr>
                  <% } %>
                <% } else { %>
                  <tr>
                    <td colspan="6">Products Not Found</td>
                  </tr>
                <% } %>
              </tbody>
              
            </table>
