      <script>
        document.getElementById('addCoupon').addEventListener('submit', (e) => {
    e.preventDefault();

    const couponName = document.getElementById('couponName').value;
    const discount = document.getElementById('discount').value;
    const minimumPur = document.getElementById('minimumPur').value;
    const maximum = document.getElementById('maximum').value;
    const expiryDate = document.getElementById('expiryDate').value;

    let valid = true;
    if (!couponName) {
      valid = false;
      document.getElementById('couponName-error').innerText = 'Coupon name is required.';
    } else {
      document.getElementById('couponName-error').innerText = '';
    }
    if (!discount || discount <= 0) {
      valid = false;
      document.getElementById('percentage-error').innerText = 'Valid discount percentage is required.';
    } else {
      document.getElementById('percentage-error').innerText = '';
    }
    if (!minimumPur || minimumPur <= 0) {
      valid = false;
      document.getElementById('minimum-error').innerText = 'Valid minimum purchase is required.';
    } else {
      document.getElementById('minimum-error').innerText = '';
    }
    if (!maximum || maximum <= 0) {
      valid = false;
      document.getElementById('maximum-error').innerText = 'Valid maximum discount is required.';
    } else {
      document.getElementById('maximum-error').innerText = '';
    }
    if (!expiryDate) {
      valid = false;
      document.getElementById('expiryDate-error').innerText = 'Expiry date is required.';
    } else {
      document.getElementById('expiryDate-error').innerText = '';
    }

    if (valid) {
      const formData = {
        couponName,
        discount,
        minimumPur,
        maximum,
        expiryDate
      };

      fetch('/admin/addcoupon', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(formData)
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          alert('Coupon added successfully');
        } else {
          alert('An error occurred: ' + data.message);
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('An error occurred while adding the coupon');
      });
    }
  });
      
      </script>

